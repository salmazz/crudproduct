<% include partials/header.ejs %>

<div class="container" style="margin-top:100px;">
    <h2 class="text-center">
        Product List 
    </h2>
<% if(products.length>0){ %>
<table class="table table-hovered">
<thead>
    <tr>
        <th scope="col">ID</th>
        <th scope="col">Product image</th>
        <th scope="col">TItle</th>
        <th scope="col">Category</th>
        <th scope="col">Quantity</th>
        <th scope="col">Price</th>
        <th scope="col">Action</th>
    </tr>
</thead>
<tbody>
    <% products.forEach((product,index)=>{ %>
<tr>
    <th scope="row"><%= product.productID %></th>
    <td> <img src="assests/img/<%=product.productID%>.<%= product.image.split('.')[1]%>"class="rounded center" style="width:50px;height:50px" alt="<%= product.image %>"></td>
    <!-- public\assests\img\72.jpeg -->
    <td> <%= product.title %></td>
    <td> <%= product.Category %></td>
    <td> <%= product.Quantity %></td>
    <td> <%= product.price %></td>
    <td>
<a href="/edit/<%=product.productID %>"  class="btn btn-sm btn-success">Edit</a>
<a href="/delete/<%=product.productID %>" class="btn btn-sm btn-danger">Delete</a>

    </td>
</tr>
    <% }) %>
</tbody>

</table>


    <%}else {%>

<p class="text-center">No Products Go To <a href="/add">Add Products</a></p>
<%}%>

</div>



<% include partials/footer.ejs %>
